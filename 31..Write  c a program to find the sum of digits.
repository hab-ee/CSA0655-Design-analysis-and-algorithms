#include <stdio.h>
int main() {
    int num, digit, sum = 0;
    printf("Enter a number: ");
    scanf("%d", &num);

    // Calculate sum of digits
    while (num > 0) {
        digit = num % 10;  
        sum += digit;      
        num /= 10;     
    }
    printf("Sum of digits: %d\n", sum);

    return 0;
}

OUTPUT:
Enter a number: 12345
Sum of digits: 15

